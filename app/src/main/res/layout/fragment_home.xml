<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.FragmentHome"
    android:background="@drawable/background_gradient"
    android:layout_margin="0dp"
    android:padding="0dp">

    <ImageView
        android:layout_width="259dp"
        android:layout_height="408dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-80dp"
        android:src="@mipmap/zenify_pfp_foreground"/>


    <ImageButton
        android:id="@+id/playPauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="-212dp"
        android:src="@drawable/ic_play"
        android:contentDescription="Play/Pause"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>



    <TextView
        android:id="@+id/userWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido admin"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zenify es una aplicación destinada,
principalmente, a estudiantes para
promover la productividad.
Un proyecto diseñado para el
disfrute del aprendizaje. Aplicación
para controlar el tiempo de estudio
y fomentar un ambiente positivo en
las vidas académicas de los
estudiantes Una herramienta para
aquellos estudiantes que necesiten
de un entorno motivador para
poder alcanzar sus metas
personales. ."
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="60dp"
        android:padding="7dp"
        />

    <ImageView
        android:id="@+id/decorativeImage"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:src="@drawable/cloud"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        />


    <WebView
        android:id="@+id/videoView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/decorativeImage"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true" />




</FrameLayout>